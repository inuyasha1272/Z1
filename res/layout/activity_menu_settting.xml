<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/height_3_80" >

    <RelativeLayout
        android:background="@drawable/light_listview_item_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/width_3_80" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="未登录" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_setting_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:background="#e3e3e3"
            android:text="登录" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/light_listview_item_background"
        android:id="@+id/rl_setting_apprecommend"
        android:layout_marginTop="@dimen/height_10_80"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/width_3_80" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="应用推荐" />

        <ImageView 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_ico_arrow_grey"
            android:layout_marginRight="5dp"
            />
        
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/light_listview_item_background"
        android:id="@+id/rl_setting_appshare"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/width_3_80" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="应用分享" />

        <ImageView 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_ico_arrow_grey"
            android:layout_marginRight="5dp"
            />
        
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/light_listview_item_background"
        android:id="@+id/rl_setting_feedback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/width_3_80" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="用户反馈" />

        <ImageView 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_ico_arrow_grey"
            android:layout_marginRight="5dp"
            />
        
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/light_listview_item_background"
        android:id="@+id/rl_setting_aboutus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/width_3_80" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="关于" />

        <ImageView 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_ico_arrow_grey"
            android:layout_marginRight="5dp"
            />
        
    </RelativeLayout>

</LinearLayout>